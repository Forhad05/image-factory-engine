{
  "name": "image-factory",
  "version": "1.0.0",
  "main": "main.js", 
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "dependencies": {
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.designer.imagefactory",
    "productName": "Image Factory",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "publish": null 
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ]
  }
}